<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Sudoku">

    <TextView
        android:id="@+id/playerOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Player One"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/playerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Two"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/playerOneScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
       android:padding="25dp"
        android:layout_below="@id/playerOne"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/playerTwoScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:padding="25dp"
       android:layout_below="@id/playerTwo"
        android:layout_alignParentEnd="true"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/playerStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/playerOneScore"
        android:textAlignment="center"
        android:textSize="25sp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
      android:layout_below="@id/playerStatus"
        android:layout_above="@id/resetGame">
        <Button
            android:id="@+id/btn_0"
            android:background="#000066"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:layout_margin="5dp"
            android:layout_gravity="fill"
            tools:ignore="RtlCompat"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn_1"
            android:background="#000066"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:layout_margin="5dp"
            android:layout_gravity="fill"
            tools:ignore="RtlCompat"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/btn_2"
            android:background="#000066"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:layout_margin="5dp"
            android:layout_gravity="fill"
            tools:ignore="RtlCompat"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/btn_3"
            android:background="#000066"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:layout_margin="5dp"
            android:layout_gravity="fill"
            tools:ignore="RtlCompat"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/btn_4"
            android:background="#000066"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:layout_margin="5dp"
            android:layout_gravity="fill"
            tools:ignore="RtlCompat"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/btn_5"
            android:background="#000066"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:layout_margin="5dp"
            android:layout_gravity="fill"
            tools:ignore="RtlCompat"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/btn_6"
            android:background="#000066"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:layout_margin="5dp"
            android:layout_gravity="fill"
            tools:ignore="RtlCompat"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/btn_7"
            android:background="#000066"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:layout_margin="5dp"
            android:layout_gravity="fill"
            tools:ignore="RtlCompat"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/btn_8"
            android:background="#000066"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            tools:ignore="RtlCompat" />


    </GridLayout>



    <Button
        android:id="@+id/resetGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESET GAME"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="#ff3300"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
      android:layout_alignParentBottom="true"/>


</RelativeLayout>